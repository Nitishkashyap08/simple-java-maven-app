pipeline {
    agent any

    tools {
        // Make sure Maven is configured in Jenkins with the correct name, like 'Maven 3.6.3'
        maven 'Maven 3.6.3'
    }

    stages {
        stage('Clean and Build') {
            steps {
                script {
                    // Run mvn clean install to rebuild the project
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                // Optionally add test stage here
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // Optionally add deploy stage here
                echo 'Deploy stage'
            }
        }
    }

    post {
        always {
            // Clean up, notifications, etc.
            echo 'Cleaning up...'
        }
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
