pipeline {
    agent { label 'agent-server' }
    environment {
        DEPLOY_DIR = 'jenkins'
        MVN_CMD = 'mvn'
    }

    tools {
        maven 'mymaven'
    }

    stages {
        stage('clean') {
            steps {
                sh "${env.MVN_CMD} clean install"
            }
        }

        stage('test') {
            steps {
                sh "${env.MVN_CMD} test"
               
            }
        }

        stage('deploy'){
    steps {
        dir("${env.DEPLOY_DIR}") {
            sh 'chmod +x deploy.sh'
            sh './deploy.sh'
        }
    }
}
    }
}