pipeline {
    agent {
        label 'dev-server'
    }

    parameters {
        string(defaultValue: 'sachin', name: 'FNAME')
    }

    tools {
        maven 'mymaven'
    }

    environment {
        NAME = "nitish"
    }

    stages {
        stage('install') {
            steps {
                sh 'mvn -version'
            }
        }

        stage('test') {
            parallel {
                stage('test A') {
                    steps {
                        echo 'this is test A'
                    }
                }
                stage('test B') {
                    steps {
                        echo 'this is test B'
                    }
                }
            }
        }

        stage('print name') {
            steps {
                echo "my name is $NAME ${params.FNAME}"
            }
        }
    }
}
