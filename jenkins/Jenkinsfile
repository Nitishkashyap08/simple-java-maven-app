pipeline {
    agent any
    tools {
        maven 'mymaven' // Jenkins tool name for Maven
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Nitishkashyap08/simple-java-maven-app.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }
    }
}
